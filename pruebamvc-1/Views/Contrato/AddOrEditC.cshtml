@model pruebamvc_1.Models.Contrato

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Contrato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddOrEditC">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idcontrato" />
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="nombre_entidad" class="control-label"></label>
                    <input asp-for="nombre_entidad" class="form-control" />
                    <span asp-validation-for="nombre_entidad" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="num_contrato" class="control-label"></label>
                    <input asp-for="num_contrato" class="form-control" />
                    <span asp-validation-for="num_contrato" class="text-danger"></span>
                </div>
            </div>
                <div class="form-group">
                    <label asp-for="trab_vinculado" class="control-label"></label>
                    <input asp-for="trab_vinculado" class="form-control" />
                    <span asp-validation-for="trab_vinculado" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="fecha_inicio" class="control-label"></label>
                    <input asp-for="fecha_inicio" class="form-control" />
                    <span asp-validation-for="fecha_inicio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="fecha_final" class="control-label"></label>
                    <input asp-for="fecha_final" class="form-control" />
                    <span asp-validation-for="fecha_final" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <input type="submit" value="Enviar" class="btn btn-primary btn-block" />
                    </div>

                    <div class="form-group col-md-6">
                        <a asp-action="Index" class="btn btn-secondary btn-block">Regresar</a>
                    </div>
                </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
